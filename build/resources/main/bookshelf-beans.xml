<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="bookshelf-data-source" class="main.java.dataManager.BookShelfDataSource"></bean>
    <bean id="bookshelf-data-manager" class="main.java.dataManager.BookShelfDataManager"></bean>
    <bean id="mysql-data-source" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
        <property name="url" value="jdbc:mysql://localhost:3306/book_shelf"></property>
        <property name="user" value="root"></property>
        <property name="password" value=""></property>
    </bean>

</beans>